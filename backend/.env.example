# Social Graph Environment Configuration
# Copy to .env and add your API key

# =============================================================================
# REQUIRED: Twitter API Key
# =============================================================================
# Get your API key from https://twitterapi.io/
# This is the only required configuration

SOCIAL_GRAPH_TWITTER_BEARER_TOKEN=your_api_key_here

# =============================================================================
# Optional: Database Configuration
# =============================================================================
# SQLite (default) - good for personal use
SOCIAL_GRAPH_DATABASE_URL=sqlite:///./social_graph.db

# PostgreSQL example (for production/multi-user):
# SOCIAL_GRAPH_DATABASE_URL=postgresql://user:pass@localhost/social_graph

# =============================================================================
# Optional: Collection Settings
# =============================================================================
# Max posts to analyze per collection run
SOCIAL_GRAPH_MAX_TOP_POSTS_PER_RUN=20

# Max engagers to fetch per post
SOCIAL_GRAPH_MAX_ENGAGERS_PER_POST=500

# Time window for co-engagement detection (hours)
SOCIAL_GRAPH_CO_ENGAGEMENT_WINDOW_HOURS=72

# Lookback period for post attribution (days)
SOCIAL_GRAPH_ATTRIBUTION_LOOKBACK_DAYS=7
