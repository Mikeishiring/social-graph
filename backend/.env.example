# Social Graph Environment Configuration
# Copy to .env and customize

# Database (SQLite by default)
SOCIAL_GRAPH_DATABASE_URL=sqlite:///./social_graph.db

# Twitter API (optional - loaded from ~/.clawdbot/secrets/twitter.json by default)
# SOCIAL_GRAPH_TWITTER_BEARER_TOKEN=your_bearer_token_here

# Collection settings
SOCIAL_GRAPH_MAX_TOP_POSTS_PER_RUN=20
SOCIAL_GRAPH_MAX_ENGAGERS_PER_POST=500
SOCIAL_GRAPH_CO_ENGAGEMENT_WINDOW_HOURS=72
SOCIAL_GRAPH_ATTRIBUTION_LOOKBACK_DAYS=7
